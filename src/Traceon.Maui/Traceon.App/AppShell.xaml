<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Arisoul.Traceon.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Arisoul.Traceon.App"
    xmlns:views="clr-namespace:Arisoul.Traceon.App.Views"
    xmlns:locArisoul="clr-namespace:Arisoul.Localization.Strings;assembly=Arisoul.Localization"
    xmlns:locTraceon="clr-namespace:Arisoul.Traceon.Localization;assembly=Traceon.Localization"
    Title="T R A C E O N"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="{x:Static locArisoul:Messages.Home}"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="{x:Static locTraceon:Strings.Actions}"
        ContentTemplate="{DataTemplate views:TrackedActionsPage}"
        Route="TrackedActionsPage" />

    <ShellContent
        Title="{x:Static locTraceon:Strings.FieldDefinitions}"
        ContentTemplate="{DataTemplate views:FieldDefinitionsPage}"
        Route="FieldDefinitionsPage" />

</Shell>
