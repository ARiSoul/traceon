<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Arisoul.Traceon.App.Views.TrackedActionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:locArisoul="clr-namespace:Arisoul.Localization.Strings;assembly=Arisoul.Localization"
    xmlns:locTraceon="clr-namespace:Arisoul.Traceon.Localization;assembly=Traceon.Localization"
    xmlns:m="clr-namespace:Arisoul.Traceon.Maui.Core.Entities;assembly=Traceon.Maui.Core"
    xmlns:vm="clr-namespace:Arisoul.Traceon.App.ViewModels"
    Title="{x:Static locTraceon:Strings.Actions}"
    x:DataType="vm:TrackedActionsViewModel">

    <Grid
        Padding="20"
        RowDefinitions="Auto,*"
        RowSpacing="16">

        <!--  Static form area  -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="{x:Static locTraceon:Strings.ActionsForm}" />
            <Entry Placeholder="{x:Static locArisoul:Messages.Name}" Text="{Binding Name}" />
            <Editor
                AutoSize="TextChanges"
                HeightRequest="80"
                Placeholder="{x:Static locArisoul:Messages.Description}"
                Text="{Binding Description}" />

            <HorizontalStackLayout Spacing="10">
                <Button Command="{Binding SaveActionCommand}" Text="{x:Static locArisoul:Messages.Save}" />
                <Button Command="{Binding PrepareNewActionCommand}" Text="{x:Static locTraceon:Strings.New_F}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!--  Scrollable list area  -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="{x:Static locTraceon:Strings.ActionsList}" />
                <CollectionView
                    ItemsSource="{Binding Actions}"
                    SelectionChanged="OnActionSelected"
                    SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:TrackedAction">
                            <Grid ColumnDefinitions="*,auto"
                                  HorizontalOptions="Fill">

                                <VerticalStackLayout Grid.Column="0" Margin="0,10" Padding="10">
                                    <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding Name}" />
                                    <HorizontalStackLayout>
                                        <Label
                                        Margin="0,0,5,0"
                                        FontSize="14"
                                        Text="{x:Static locTraceon:Strings.CreateAt}"
                                        TextColor="Gray" />
                                        <Label
                                        FontSize="14"
                                        Text="{Binding CreatedAt}"
                                        TextColor="Gray" />
                                    </HorizontalStackLayout>
                                    <Label
                                    FontSize="13"
                                    Text="{Binding Description}"
                                    TextColor="Gray" />
                                    <BoxView HeightRequest="1" Color="White" />
                                </VerticalStackLayout>

                                <HorizontalStackLayout Grid.Column="1" Spacing="3" Padding="15">
                                    <Button Command="{Binding DeleteActionCommand}"
                                            IsEnabled="{Binding SelectedAction}"
                                            Text="{x:Static locArisoul:Messages.Delete}" />
                                </HorizontalStackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>